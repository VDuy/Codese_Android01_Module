<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/et_enter_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter city name" />

    <Button
        android:id="@+id/bt_get_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_enter_city_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space"
        android:text="ok" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_get_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_show_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_show_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_date"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_show_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_country"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_show_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_wind"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />

    <TextView
        android:id="@+id/tv_show_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show_temperature"
        android:layout_marginLeft="@dimen/large_space"
        android:layout_marginTop="@dimen/large_space"
        android:layout_marginRight="@dimen/large_space" />
</RelativeLayout>