<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EFEAEA"
                android:ellipsize="end"
                android:fontFamily="@font/font"
                android:hint=""
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:textSize="40dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/font"
                android:hint="0"
                android:inputType="number"
                android:textAlignment="textEnd"
                android:textSize="80dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/bt_numCE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:text="CE"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="C"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numBS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="BS"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="/"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/bt_num7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="7"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="24dp"
                android:text="8"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#fff"
                android:padding="24dp"
                android:text="9"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#C6CCC6"
                android:padding="24dp"
                android:text="x"
                android:textAlignment="center"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/bt_num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="4"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="5"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="6"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="-"
                android:textAlignment="center"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/bt_num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="+"
                android:textAlignment="center"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/bt_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="+/-"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_num0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="24dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numDot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="."
                android:textAlignment="center"
                android:textSize="24dp" />

            <Button
                android:id="@+id/bt_numEqua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#CCC6C6"
                android:padding="24dp"
                android:text="="
                android:textAlignment="center"
                android:textSize="24dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>